<!-- google icons -->
<!-- https://www.w3schools.com/icons/google_icons_content.asp -->
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<style>
    a {
        margin-right: 10px;
    }
    #search {
        margin-bottom: 15px;
    }
    #search-button {
        margin-left: 5px;
        border-radius: 5px;
    }
    .search-bar {
        border-radius: 5px;
        width: 300px;
    }
</style>

<script type = "text/javascript" src = "https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>

<h1 class="mt-4">ALL QUESTIONS</h1>
<hr/>
<div id="search">
    <h4 class="mb-3">SEARCH QUESTIONS BY TAG</h4>
    <form action="/questions/search/" method="post">
        <input class="search-bar p-2" type="text" name="tags"/>
        <button id="search-button" class="btn btn-primary mb-1 pt-2 pb-1" type="submit" name="send"><i class='material-icons'>search</i></button>
    </form>
</div>
<hr/>
{{#if questions}}
{{#each questions}}
<h3 class="mt-4 mb-4">{{title}}</h3>
<p>VIEWS: {{views}}</p>
<p>{{date_time}}</p>
{{#if ../session.userId}}
<a class="btn btn-primary mt-1" href='/questions/{{_id}}'>VIEW THIS QUESTION</a>
{{/if}}
<hr/>
{{/each}}
{{else}}
<h4>There haven't been any questions posted yet.</h4>
{{/if}}

<script>

    function view(id) {
        $.ajax({
            url: "/questions/" + id,
            type: "GET",
            success: function(result) {
                location.reload();
            }
        });
    }

</script>