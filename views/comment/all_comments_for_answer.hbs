<style>
    img {
        border-radius: 50%;
        width: 30px;
        height: auto;
        margin-left: 10px;
    }
    #user {
        float: left;
        margin-top: 27px;
    }
    #contents {
        margin-top: 30px;
        margin-bottom: 10px;
    }
</style>

<h1 class="mt-3">COMMENTS ADDED FOR THIS ANSWER</h1>
<hr style="height:1px;background-color:grey"/>
{{#if comments}}
{{#each comments}}
<h3 id="contents">{{contents}}</h3>
<p id="user">commented by <b>{{user.username}}</b></p><br><img src="{{user.picture}}" title="{{user.username}}">
<p class="mt-3">{{date_time}}</p>

<hr/>
{{/each}}
{{else}}
<h4>This answer doesn't have any comments yet.</h4>
{{/if}}