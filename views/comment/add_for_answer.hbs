<style>
    #answer {
        display: none;
    }
</style>

<h1 class="mt-3">ADD A COMMENT TO THIS ANSWER<br/><p class="mt-4">{{contents}}</p></h1>
<form action="/comments/answers" method="post">
    <table>
        <tr>
            <td class="h5 pb-3 pt-3">YOUR COMMENT</td>
        </tr>
        <tr>
            <td><textarea class="input" name="contents" rows="4" cols="70"></textarea></td>
        </tr>
        <tr>
            <td><input id="answer" type="text" name="answerFK" value="{{_id}}" required/></td>
        </tr>
        <tr>
            <td><input class="btn btn-primary" type="submit" name="send" value="COMMENT"></td>
        </tr>
        <tr>
            <td><a class="btn btn-secondary mr-2 mt-2" href='/answers/all_answers/{{questionFK}}'>BACK</a></td>
        </tr>
    </table>
</form>