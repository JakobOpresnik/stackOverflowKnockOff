<h1 class="mt-3">TRENDING QUESTIONS</h1>
<hr/>

<style>
    #most-popular {
        color: red;
    }
</style>

{{#if questions}}
{{#each questions}}
{{#if @first}}
<h2 class="mb-3 mt-3" id="most-popular">THE MOST POPULAR QUESTION</h2>
{{/if}}
<h3 class="mt-4 mb-4">{{title}}</h3>
<p>VIEWS: {{views}}</p>
<p>{{date_time}}</p>
{{#if ../session.userId}}
<a class="btn btn-primary mt-1" href='/questions/{{_id}}'>VIEW THIS QUESTION</a>
{{/if}}
<hr/>
{{/each}}
{{else}}
<h4>There aren't any trending questions.</h4>
{{/if}}